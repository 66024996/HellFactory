<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Account - Phayao Place</title>
    <style>
        body, html {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            height: 100%;
        }
        .background {
            background: url('image/lobby.jpg') no-repeat center center/cover;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
        }
        .overlay {
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            position: absolute;
        }
        .login-box {
            background: rgba(0, 0, 0, 0.756);
            padding: 20px 40px;
            border-radius: 10px;
            text-align: center;
            color: white;
            max-width: 400px;
            width: 612px;
            height: 674px;
            justify-items: center;
        }
        .tagline {
            margin-top: 20%;
            font-size: 1.5em;
            color: #fff;
            margin-bottom: 20px;
        }
        .input-field {
            width: 90%;
            padding: 10px;
            margin: 12px 0;
            border: none;
            border-radius: 5px;
            font-size: 1em;
            background: rgba(133, 122, 122, 0.777);
            color: #ffffff;
        }
        .input-field::placeholder {
            color: rgba(255, 255, 255, 0.7);
        }
        .login-button {
            width: 100%;
            padding: 10px;
            background: #FF9B81;
            border: none;
            border-radius: 5px;
            color: white;
            font-size: 1em;
            cursor: pointer;
            margin-top: 50px;
            text-align: center;
        }
        .login-button:hover {
            background: #c67865;
        }
    </style>
</head> 
<body>
    <div class="background">
        <div class="overlay">
            <div class="login-box">
                <p class="tagline">Create <span style="color: #FF9B81;">Account</span></p>
                <form action="/createaccount" method="post">
                    <input type="text" id="username" placeholder="Username" class="input-field">
                    <input type="text" id="firstName" placeholder="First Name" class="input-field" style="width: 40%; margin-right: 4%;">
                    <input type="text" id="lastName" placeholder="Last Name" class="input-field" style="width: 40%;">
                    <input type="email" id="email" placeholder="Email" class="input-field">
                    <input type="password" id="password" placeholder="Password" class="input-field">
                    <button type="button" onclick="register()" class="login-button">confirm</button>
                </form>
            </div>
        </div>
    </div>
    <script>
        async function register() {
            const username = document.getElementById("username").value;
            const firstName = document.getElementById("firstName").value;
            const lastName = document.getElementById("lastName").value;
            const email = document.getElementById("email").value;
            const password = document.getElementById("password").value;

            try {
                const response = await fetch("http://localhost:3000/createaccount", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ username, first_name: firstName, last_name: lastName, email, password })
                });

                if (!response.ok) {
                    const errorText = await response.text();
                    throw new Error(`Server Error: ${response.status} - ${errorText}`);
                }

                const data = await response.json();
                alert(data.message);

                if (data.user_id) {  
                    window.location.href = `/profile/${data.user_id}`; // ✅ เปลี่ยนหน้าไปที่โปรไฟล์
                }
            } catch (error) {
                console.error("❌ Register Error:", error);
                alert("เกิดข้อผิดพลาด: " + error.message);
            }
        }
    </script>
</body>
</html>
