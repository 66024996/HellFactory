    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const googleButton = document.getElementById("google-login");

            if (!googleButton) {
                console.error("‚ùå ‡∏õ‡∏∏‡πà‡∏° Google ‡πÑ‡∏°‡πà‡∏û‡∏ö‡πÉ‡∏ô DOM!");
                return;
