            }

            try {
                console.log("üîç Sending login request to server...");
                const response = await fetch("/login", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ username, password }) // ‚úÖ ‡∏™‡πà‡∏á‡∏Ñ‡πà‡∏≤‡πÑ‡∏õ‡∏ó‡∏µ‡πà `/login`
                });

                const data = await response.json();
                console.log("‚úÖ Login Response:", data);

                if (!data.success) {
                    throw new Error("‚ùå Login failed: " + data.error);
                }

                // üîπ ‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å role ‡πÅ‡∏•‡∏∞ userId ‡πÉ‡∏ô LocalStorage
                localStorage.setItem("userRole", data.role);
