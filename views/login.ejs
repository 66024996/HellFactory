                        window.location.href = `/profile/${data.userId}`; // üîπ ‡πÑ‡∏õ‡∏´‡∏ô‡πâ‡∏≤ Admin
                    } else {
                        window.location.href = `/profile/${data.userId}`; // üîπ ‡πÑ‡∏õ‡∏´‡∏ô‡πâ‡∏≤ Profile
                    }
                }, 500);

