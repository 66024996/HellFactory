<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> 
    <title>Phayao Place - Rooms</title>
    <style>
        /* General Styles */
        body, html {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background: #ffffff;
        }

        /* Navbar Section */
        header {
            background: rgba(0, 0, 0, 0.6);
            color: white;
            padding: 30px 8px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: fixed;
            top: 0;
            width: 99%;
            z-index: 1000;
        }

        nav a {
            color: white;
            margin: 0 15px;
            text-decoration: none;
            font-size: 1em;
            transition: color 0.6s;
        }

        nav a:hover {
            color: #f39c12;
        }

        .header-image {
            background-image: url('./image/ภาพหน้า Reservasion.jpg');
            background-size: cover;
            background-position: center;
            height: 300px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.7);
            font-size: 2em;
            font-weight: bold;
        }

        .search-bar {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin: 20px auto;
            padding: 10px;
        }

        .search-bar input, .search-bar select, .search-bar button {
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 1em;
        }

        .content {
            display: flex;
            justify-content: space-between;
            width: 80%;
            margin: 20px auto;
            gap: 20px;
        }

        .room-list {
            flex: 2;
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .room-item {
            border: 1px solid #ccc;
            border-radius: 10px;
            padding: 20px;
            display: flex;
            align-items: center;
            background: #f9f9f9;
        }

        .room-item img {
            width: 30%;
            border-radius: 10px;
        }
        .room-details{
            padding-left: 50px;
        }

        .room-item .room-details {
            width: 65%;
        }

        .room-item button {
            padding: 10px 20px;
            background: #FF9B81;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .room-item button:hover {
            background: #c77763;
        }

        .booking-details {
            flex: 1;
            border: 1px solid #ccc;
            border-radius: 10px;
            padding: 20px;
            background: #fff;
            display: flex;
            flex-direction: column;
            gap: 10px;
            max-height: 200px;
        }

        .booking-details h3 {
            margin: 0;
            font-size: 1.5em;
        }

        .booking-details p {
            margin: 5px 0;
        }

        .price-breakdown {
            font-size: 0.9em;
            color: gray;
        }

        .booking-details button {
            padding: 10px 20px;
            background: #F2CC8F;
            color: black;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            align-self: flex-end;
        }

        .booking-details button:hover {
            background: #f0cd93;
        }

        /* Footer Section */
        footer {
            background: #FF9B81;
            color: black;
            padding: 20px;
            text-align: center;
            position: relative;
            bottom: 0;
            width: 98%;
        }

        footer a {
            color: white;
            text-decoration: none;
            margin: 0 10px;
        }

        footer a:hover {
            text-decoration: underline;
        }
    </style>
    <script>
        const rooms = [
            { name: 'Superior Terrace', size: '34.4m²', sleeps: '2', bed: '1 Queen bed', price: 2592.00 },
            { name: 'Deluxe Terrace', size: '46.1m²', sleeps: '2', bed: '1 King bed', price: 3592.00 },
            { name: 'Ocean Front Terrace', size: '38.6m²', sleeps: '2', bed: '1 King bed', price: 4292.00 }
        ];

        function searchRooms() {
            const checkInDate = document.getElementById('check-in').value;
            const checkOutDate = document.getElementById('check-out').value;
            const roomList = document.getElementById('room-list');

            if (!checkInDate || !checkOutDate) {
                alert('Please select both check-in and check-out dates.');
                return;
            }

            roomList.innerHTML = '';
            rooms.forEach(room => {
                const roomItem = `
                    <div class="room-item">
                        <img src="./image/ห้องนอน(5).png" alt="${room.name}">
                        <div class="room-details">
                            <h3>${room.name}</h3>
                            <p>${room.size} • Sleeps ${room.sleeps} • ${room.bed}</p>
                            <p>Price: ${room.price.toFixed(2)} THB / Night</p>
                            <button onclick="showBookingDetails('${room.name}', '${room.price.toFixed(2)}')">Book Now</button>
                        </div>
                    </div>
                `;
                roomList.innerHTML += roomItem;
            });
        }

        function showBookingDetails(roomName, price) {
            const bookingDetails = document.getElementById('booking-details');
            const taxesFees = (price * 0.1).toFixed(2);
            const totalPrice = (parseFloat(price) + parseFloat(taxesFees)).toFixed(2);

            bookingDetails.innerHTML = `
                <h3>${roomName}</h3>
                <p>1 night, 2 guests</p>
                <p>Room Price: ${price} THB</p>
                <p class="price-breakdown">Service charge and taxes: ${taxesFees} THB</p>
                <p><strong>Total Price: ${totalPrice} THB</strong></p>
                <button onclick="goToPage('payment')">Book Now</button>
            `;
            bookingDetails.style.display = 'block';
        }

        function goToPage(pageUrl) {
            window.location.href = pageUrl;
        }
    </script>
</head>
<body>
    <!-- Navbar Section -->
    <header>
        <div class="logo">Phayao Place</div>
        <nav>
            <a href="about">About</a>
            <a href="rooms">Rooms</a>
            <a href="facilities">Facilities</a>
            <a href="dining">Dining</a>
            <a href="reservation">Reservation</a>
        </nav>
    </header>

    <!-- Header Image Section -->
    <div class="header-image"></div>

    <!-- Search Bar -->
    <div class="search-bar">
        <input type="date" id="check-in" placeholder="Check-in Date">
        <input type="date" id="check-out" placeholder="Check-out Date">
        <button onclick="searchRooms()">Search</button>
    </div>

    <!-- Main Content -->
    <div class="content">
        <!-- Room List -->
        <div id="room-list" class="room-list">
            <!-- Rooms will be dynamically inserted here -->
        </div>

        <!-- Booking Details -->
        <div id="booking-details" class="booking-details" style="display: none;"></div>
    </div>

    <!-- Footer Section -->
    <footer>
        <p>&copy; 2025 Phayao Place. All Rights Reserved.</p>
        <p>
            <a href="#privacy">Privacy Policy</a> |
            <a href="#terms">Terms of Service</a> |
            <a href="#contact">Contact Us</a>
        </p>
    </footer>
</body>
</html>
